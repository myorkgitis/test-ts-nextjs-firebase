{
	"name": "functions-nextjs",
	"version": "3.0.0",
	"description": "Next.js Static Site Generation and Server Side Rendering on Firebase Hosting with Cloud Functions",
	"author": "James Hegedus",
	"license": "MIT",
	"main": "./dist/server.js",
	"scripts": {
		"lint": "eslint --ext .js,.ts,.tsx .",
		"clean": "rimraf nextjs/",
		"next:dev": "next dev",
		"next:dev:debug": "NODE_OPTIONS='--inspect' NEXT_DEV='1' next dev",
		"next:build": "next build",
		"next:start": "next start",
		"predeploy": "npm run clean && next build",

		"fb:dev": "tsc -w | firebase emulators:start --inspect-functions --only functions,hosting",
		"fb:deploy": "firebase deploy",
		"fb:serve": "npm run build && firebase emulators:start --only functions,hosting",
		"fb:logs": "firebase functions:log",
		"fb:env": "(test -f env.json && firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ./env.json)\") || echo \"Please add the file env.json to functions root directory before deploy.\"",

		"build-tsc": "tsc"
	},
	"engines": {
		"node": "12"
	},
	"dependencies": {
		"firebase": "^7.22.0",
		"firebase-admin": "^8.13.0",
		"firebase-functions": "^3.11.0",
		"next": "^9.5.4",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"swr": "^0.2.3"
	},
	"devDependencies": {
		"@types/react": "^17.0.6",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"eslint-config-google": "^0.14.0",
		"eslint-plugin-import": "^2.22.0",
		"firebase-functions-test": "^0.2.2",
		"rimraf": "^3.0.2",
		"shelljs": "^0.8.4",
		"typescript": "^3.8.0"
	}
}
